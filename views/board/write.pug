extends ../layout/default.pug
block content
	.container
		.jumbotron
			h2= title
			button.btn.btn-primary(onclick="location.href='/';") 로그인
		div.form-wrap
			form(method="post" name="boardForm" action=`${list ? '/board/saveUpdate' : '/board/save'}`)
				input(type="hidden" name="id" value=`${list && list.id ? list.id : ''}`)
				input.form-control(name="title" placeholder="제목을 입력하세요." value=`${list && list.title ? list.title : ''}`)
				input.form-control(name="writer" placeholder="작성자를 입력하세요." value=`${list && list.writer ? list.writer : ''}`)
				textarea.form-control(name="content" placeholder="내용을 입력하세요.")= `${list && list.content ? list.content : ''}`
				hr
				if list
					button.btn.btn-success 수정
				else
					button.btn.btn-primary 저장
				button.btn.btn-danger(type="reset") 다시작성
